<p id="notice"><%= notice %></p>

<div class="page-header"><h1>MARTA Locations</h1></div>

<table class= "table">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.city %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to 'Show', location, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', location, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, class: 'btn btn-success' %>
